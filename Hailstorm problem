// HAILSTORM PROBLEM
// if a no. is even then = n/2
// if no is odd print 3n+1

#include <stdio.h>
int main()
{
    int n;
    printf("enter n =");
    scanf("%d", &n);

    while (n != 1)
    {
        if (n % 2 == 0)
        {
            n = n / 2;
        }
        else
        {
            n = 3 * n + 1;
        }
        printf("%d ", n);
    }
    printf("\n ");

    return 0;
}
