#include <iostream>
using namespace std;

int main()
{
    int n = 10;
    for (int i = 0; i < n; i++)
    {
        // spaces = n-i-1
        for (int j = 0; j < n - i - 1; j++)
        {
            cout << " ";
        }
        // nums 1
        for (int j = 1; j <= i + 1; j++)
        {
            cout << j;
        }
        // nums 2
        for (int j = i; j >= 1; j--)
        { // here we can enter j >0 inplace of j>=1
            cout << j;
        }
        cout << endl;
    }

    return 0;
}
