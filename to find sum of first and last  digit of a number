
#include <stdio.h>
int main()
{
    int n, firstDigit, lastDigit, sum;

    printf("enter n = ");
    scanf("%d", &n);

    // Extract last digit
    lastDigit = n % 10;

    // Extract first digit
    firstDigit = n;
    while (firstDigit >= 10)
    {
        firstDigit = firstDigit / 10;
    }

    sum = firstDigit + lastDigit;

    printf("First digit = %d\n", firstDigit);
    printf("lastDigit = %d\n", lastDigit);
    printf("sum is %d\n", sum);
    return 0;
}
